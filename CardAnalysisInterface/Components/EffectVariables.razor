@inject AggregateCardAnalysis Analysis

@if (PositionalToken.Token.Type.GetCustomAttribute<IgnoreInAnalysisAttribute>() is null)
{
    string colorHex = Analysis.TypeColors[PositionalToken.Token.Type];
    <div class="effect-details-block" data-capture-id=@PositionalToken.CaptureId>
        <h5 style=@($"color: {colorHex}; padding-left: 16px;")>@PositionalToken.Token.Type.Name</h5>
        <TokenUnitDetails PositionalToken=@PositionalToken />
    </div>
}

@code {
    [Parameter, EditorRequired]
    public PositionalToken PositionalToken { get; set; } = default!;
}