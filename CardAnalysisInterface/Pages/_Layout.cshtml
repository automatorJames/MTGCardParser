@using Microsoft.AspNetCore.Components.Web
@namespace CardAnalysisInterface.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="CardAnalysisInterface.styles.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="css/card-analysis.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="scripts/card-analysis.js"></script>
    <script src="scripts/regex-dialog.js"></script>
    <script type="module" src="scripts/word-tree-animator.js"></script>
    <script type="module" src="scripts/word-tree-layout-calculator.js"></script>
    <script type="module" src="scripts/word-tree-svg-drawer.js"></script>
    <script type="module" src="scripts/span-tree-orchestrator.js"></script>
    <script type="module" src="scripts/span-tree-event-handler.js"></script>
    <script type="module" src="scripts/span-tree-manager.js"></script>

</body>
</html>
